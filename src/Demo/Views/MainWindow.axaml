		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_Process">
				<MenuItem Header="_Start" Click="OnStartClicked"/>
				<Separator/>
				<MenuItem Header="E_xit" Click="OnExitClicked"/>
			</MenuItem>
		</Menu>
		<views:MainView />
	</DockPanel>
</Window>
